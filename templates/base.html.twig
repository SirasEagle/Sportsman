<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div style="background-color: gray; width: 300px; height: 100vh; position: fixed; top: 0; left: 0; display: flex; flex-direction: column;">
            <div style="flex: 1;">
                <a href="{{ path('app_calendar') }}">Calendar</a>
            </div>
            <div style="flex: 1;">
                <a href="{{ path('index_exercise') }}">Exercises</a>
            </div>
            <div style="flex: 1;">
                <a href="{{ path('app_calendar') }}">Calendar</a>
            </div>
        </div>

        <div style="float: right;">
            <a href="{{ path('app_calendar') }}"><img src="path_to_user_icon"></a>
        </div>

        <div style="margin-left: 320px;">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
