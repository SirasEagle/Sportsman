{% extends 'base.html.twig' %}

{% trans_default_domain 'forms' %}
{% block title %}{{ 'product.product'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/product.css') }}">
{% endblock %}

{% block body %}

	<div class="example-wrapper">
		<h2>{{ product.name }}:</h2>
      <div>{{ product.category.value }}</div>
      <div>{{ product.packageSize }}g</div>
      <div>{{ product.company.name }}</div>
      {% if product.portions is not null %}
         {% for portion in product.portions %}
			   <div>{{ portion.name }}, {{ portion.weight }}g</div>
         {% endfor %}
		{% endif %}
      {% if product.nutritionalTable is not null %}
         <h3>{{ 'nutri_table.nutri_table'|trans }} ({{ 'nutri_table.per_cent'|trans }}):</h3>
         <div>{{ 'nutri_table.kcal'|trans }}: {{ product.nutritionalTable.kcal }}</div>
         <div>{{ 'nutri_table.fat'|trans }}: {{ product.nutritionalTable.fat }}g</div>
         <div>{{ 'nutri_table.sat_fat'|trans }}: {{ product.nutritionalTable.saturatedFat }}g</div>
         <div>{{ 'nutri_table.carbs'|trans }}: {{ product.nutritionalTable.carbohydrates }}g</div>
         <div>{{ 'nutri_table.sugars'|trans }}: {{ product.nutritionalTable.sugars }}g</div>
         <div>{{ 'nutri_table.protein'|trans }}: {{ product.nutritionalTable.protein }}g</div>
         <div>{{ 'nutri_table.salt'|trans }}: {{ product.nutritionalTable.salt }}g</div>
		{% endif %}

      <button onclick="window.location.href = '{{ path('index_product') }}';" class="btn editButton">
			<i class="fa fa-arrow-left"></i> {{ 'product.back'|trans }}
		</button>
	</div>

{% endblock %}
