{% extends 'base.html.twig' %}

{% block title %}{{ exercise.name }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/exercise.css') }}">
{% endblock %}
{% block body %}

<div class="example-wrapper">
    <h2>{{ exercise.name }}:</h2>
    {% if exercise.imageLink is not null %}
        <img src={{ exercise.imageLink }} alt="exercise" height="400">
    {% endif %}
    <div>{{ exercise.description }}</div>
    {% for unit in units %}
        {# <li>{{ unit.workoutId }}, {{ unit.info }}</li> #}
        <li>{{ unit.workout.date|date('Y-m-d') }}; {{ unit.set1 }}; {{ unit.set2 }}; {{ unit.set3 }}; {{ unit.info }}</li>
    {% endfor %}
</div>
{% endblock %}
