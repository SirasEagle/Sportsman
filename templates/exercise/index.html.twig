{% extends 'base.html.twig' %}

{% block title %}Hello ExerciseController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h2>Exercises</h2>
    {% if exercises %}
        {% for exercise in exercises %}
            <div>
                <a href="{{ path('show_exercise', {'id': exercise.id}) }}">{{ exercise.name }}</a>
            </div>
        {% endfor %}
    {% endif %}
    <a href="{{ path('new_exercise') }}" class="button">New Exercise</a>
</div>
{% endblock %}
