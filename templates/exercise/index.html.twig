{% extends 'base.html.twig' %}

{% block title %}Exercises{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/exercise.css') }}">
{% endblock %}
{% block body %}

<div class="example-wrapper">
    <h2>Exercises</h2>
    <a href="{{ path('new_exercise') }}" class="button">New Exercise</a>
    <a href="{{ path('median_exercise') }}" class="button">Calculate median</a>
    {% if exercises %}
        <div class="exercise-container">
            {% for exercise in exercises %}
                <div class="exercisePanel">
                    <a href="{{ path('show_exercise', {'id': exercise.id}) }}">{% if exercise.name|length > 18 %}{{ exercise.nameShort }}{% else %}{{ exercise.name }}{% endif %}</a>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
